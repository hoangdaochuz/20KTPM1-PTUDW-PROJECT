<div class="container row products-wrapper">
    <div>
        <input type="text">
    </div>
    {{#each products as |product|}}
        <a href="/products/{{product.id}}" class="col-lg-4 col-md-6 col-sm-12">
            
            <div class="w-100 h-75 rounded">
                <img class="w-100 h-100 rounded" src={{product.img}}>
            </div>
            <h2 class="h4">{{product.name}}</h2>
            <p>{{product.price}}</p>

        </a>
    {{/each}}

    <a href="/">Back</a>
</div>