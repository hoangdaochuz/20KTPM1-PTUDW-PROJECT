<script id="order-product-template" type="text/x-handlebars-template">
    \{{#each products}}
        <li>\{{this.name}} <span>$\{{this.price}} X \{{this.quantity}}</span></li>
    \{{/each}}
</script>

<script id="total-order-template" type="text/x-handlebars-template">
    \{{#if total}}
        <div class="checkout__order__subtotal">Subtotal <span>$\{{total}}</span></div>
        <div class="checkout__order__total">Total <span>$\{{total}}</span></div>
    \{{/if}}
</script>

{{#extend "scripts"}}
    <script>
        let totalOrder = 0;
        function setTotal(newTotal){
            totalOrder = newTotal
        }
        let productsOrder = null;
        function setProducts(products){
            productsOrder = products
        }
        function getCart(){
            $.getJSON('/api/cart/',function({products}){
                setProducts(products)
                console.log('cart: ', products)
                var source  = $('#order-product-template').html();
                var template = Handlebars.compile(source);
                var html = template({products});
                $('#order-product-id').html(html)

                let total = 0;
                for(let i=0;i<products.length;i++){
                    total = total+  products[i].quantity*products[i].price;
                }
                setTotal(total)
                console.log("total ", total)

                var sourceTotal = $('#total-order-template').html();
                var templateTotal = Handlebars.compile(sourceTotal);
                var htmlTotal = templateTotal({total});
                $('#total-checkout-id').html(htmlTotal)
            })
        }
        getCart()
        function handleOrder(idUser){
            {{!-- const sum_cost = getTotalCostOfOrder() --}}
            const shipping_address = $('#shipping-address').val();

            const date = new Date();
            const day = date.getDate();
            const month = date.getMonth() + 1;
            const year = date.getFullYear();

            const create_at = `${year}-${month}-${day}`

            const order = {
                idUser,
                sum_cost: totalOrder,
                shipping_address,
                create_at,
                productsOrder,
            }
            console.log(order)
            $.post('/api/orders/add', order,(data)=>{
                if(data.status ==="success"){
                    window.location.href = '/checkout/success'
                }
                alert(data.status)
            })   
        }

    </script>
{{/extend}}