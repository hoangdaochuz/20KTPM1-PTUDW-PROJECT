
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">
          Đăng nhập
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body sign_in_main">
        <div class="sign_in_box">
          <form class="sign_in_form" action="/auth/login" method="post">
            <h2>ĐĂNG NHẬP</h2>

            <div>
              <h5>Email</h5>
              <input type="email" name="email" />
            </div>
            <div>
              <h5>Mật khẩu</h5>
              <input type="password" name="password" />
            </div>
            <div class="modal-auth-btn-box">
                <button type="submit" class="btn-default btn-outline">
                  Đăng nhập
                </button>
            </div>
          </form>

          <p>
            Bạn chưa có tài khoản?
            <a href="/auth/register">Đăng ký
              ngay!</a>
          </p>
          <a class="modal-auth-forget-pass" href="#" class="button">Quên mật khẩu</a>
        </div>
      </div>
    </div>
  </div>
