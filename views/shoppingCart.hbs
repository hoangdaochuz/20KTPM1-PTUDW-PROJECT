    <script id="products-template" type="text/x-handlebars-template">
        \{{#each products}}
            <tr>
                <td class="shoping__cart__item">
                    <img style="width: 100px; height: 100px;" src="\{{this.image}}" alt="">
                    <h5>\{{this.name}}</h5>
                </td>
                <td class="shoping__cart__price">
                    $\{{this.price}}
                </td>
                <td class="shoping__cart__quantity">
                    <div class="quantity">
                        <div class="pro-qty">
                            <button onclick="decreaseItemOfCart(\{{this.id}})">-</button>
                            <input type="text" value="\{{this.quantity}}">
                            <button onclick="addItemToCart(\{{this.id}})">+</button>
                        </div>
                    </div>
                </td>
                <td class="shoping__cart__total">
                    $\{{this.price}} X \{{this.quantity}}
                </td>
                <td class="shoping__cart__item__close">
                    <span class="icon_close"></span>
                </td>
            </tr>
        \{{/each}}
    </script>

    <script id = "total-checkout-template" type="text/x-handlebars-template">
        \{{#if total}}
            <h5>Cart Total</h5>
            <ul>
                <li>Subtotal <span>$\{{total}}</span></li>
                <li>Total <span>$\{{total}}</span></li>
            </ul>
            <a href="/checkout" class="primary-btn">PROCEED TO CHECKOUT</a>
        \{{/if}}
    </script>

    {{#extend "scripts"}}
        <script>
            function getCart(){
                $.getJSON('/api/cart/',function({products}){
                    console.log('cart: ', products)
                    var source  = $('#products-template').html();
                    var template = Handlebars.compile(source);
                    var html = template({products});
                    $('#cart-body-id').html(html)

                    let total = 0;
                    for(let i=0;i<products.length;i++){
                        total = total+  products[i].quantity*products[i].price;
                    }

                    console.log("total ", total)

                    var sourceTotal = $('#total-checkout-template').html();
                    var templateTotal = Handlebars.compile(sourceTotal);
                    var htmlTotal = templateTotal({total});
                    $('#shoping-total-checkout').html(htmlTotal)
                })
            }

            getCart()
            
            function addItemToCart(id){
                const product = {
                    productId: parseInt(id)
                }
                console.log(id)
                $.post('/api/cart/add', product, (data)=>{
                    console.log(data)
                })
                getCart();
            }

            function decreaseItemOfCart(id){
                const product = {
                    productId: parseInt(id)
                }
                $.post('/api/cart/decrease', product, (data)=>{
                    console.log(data)
                })

                getCart();
            }
        </script>
    {{/extend}}